{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      "*": "ask",
      "git *": "deny",
      "npm *": "allow",
      "rm *": "deny"
    },     
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    },
    "write": "ask",
    "edit": {
      "*": "allow",

      "packages/web/src/content/docs/*.mdx": "allow"
    }
  }
}
